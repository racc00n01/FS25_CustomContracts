<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="menuCreateContract" onOpen="onOpen" onClose="onClose" onCreate="onCreate">
  <GuiElement profile="newLayer" />
  <Bitmap profile="dialogFullscreenBg" id="dialogBg" />
  <GuiElement profile="dialogBg" id="dialogElement" size="900px 800px">
    <ThreePartBitmap profile="fs25_dialogBgMiddle" />
    <ThreePartBitmap profile="fs25_dialogBgTop" />
    <ThreePartBitmap profile="fs25_dialogBgBottom" />

    <GuiElement profile="fs25_dialogContentContainer">
      <Text profile="dialogTitle" text="$l10n_cc_dialog_create_title" position="0px -30px"/>

      <BoxLayout flowDirection="vertical" position="15px -100px">
        <GuiElement size="435px 620px" elementSpacing="5px" extends="emptyPanel" with="anchorTopLeft">

          <!-- TEMPLATE: FIELD -->
          <BoxLayout flowDirection="vertical" id="sectionFieldWork">
            <Text text="Field ID" profile="CC_ContractInputLabel"/>
            <MultiTextOption id="fieldSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onFieldSelectChange">
              <Text profile="fs25_multiTextOptionText" name="text" />
            </MultiTextOption>

            <Text text="Work Type" profile="CC_ContractInputLabel" />
            <MultiTextOption id="workTypeSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onWorkTypeSelectChange">
              <Text profile="fs25_multiTextOptionText" name="text" />
            </MultiTextOption>

            <!-- Reward -->
            <Text text="Reward (â‚¬)" profile="CC_ContractInputLabel"/>
            <TextInput profile="CC_Input" id="rewardInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
              <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
            </TextInput>

            <!-- Description -->
            <Text text="Description (optional)" profile="CC_ContractInputLabel" />
            <TextInput profile="CC_InputTextArea" id="descriptionInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
              <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
            </TextInput>

            <!-- Start date -->
            <Text text="Start date" profile="CC_ContractInputLabel" />
            <MultiTextOption id="startDateSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onStartDateSelectChange">
              <Text profile="fs25_multiTextOptionText" name="text" />
            </MultiTextOption>


            <!-- Due date -->
            <Text text="Due date" profile="CC_ContractInputLabel" />
            <MultiTextOption id="dueDateSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onDueDateSelectChange">
              <Text profile="fs25_multiTextOptionText" name="text" />
            </MultiTextOption>
          </BoxLayout>

          <!-- TEMPLATE: TRANSPORT (placeholder) -->
          <BoxLayout flowDirection="vertical" id="sectionTransport">
            <Text text="Transport Type" profile="CC_ContractInputLabel"/>
            <SmoothList id="transportProductSelector" profile="ingameMenuTSStockCheckListItem">
              <ListItem profile="ingameMenuTSStockCheckListItem">
                <Text profile="CC_ContractListItemTitle" name="product"/>
                <Text profile="CC_ContractListItemTitle" name="amount"/>
              </ListItem>
            </SmoothList>

            <!-- <ThreePartBitmap profile="fs25_subCategoryListSliderBox">
              <Slider profile="fs25_listSlider" dataElementId="transportProductSelector" />
            </ThreePartBitmap> -->

            <!-- <MultiTextOption id="transportProductSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onTransportTypeChange">
              <Text profile="fs25_multiTextOptionText" name="text" />
            </MultiTextOption> -->

            <!-- From -->
            <Text text="From" profile="CC_ContractInputLabel" />
            <TextInput profile="CC_InputTextArea" id="transportFromInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
              <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
            </TextInput>

            <!-- From -->
            <Text text="To" profile="CC_ContractInputLabel" />
            <TextInput profile="CC_InputTextArea" id="transportToInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
              <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
            </TextInput>

            <!-- Amount -->
            <Text text="Amount (optional)" profile="CC_ContractInputLabel" />
            <TextInput profile="CC_InputTextArea" id="transportAmountInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
              <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
            </TextInput>
          </BoxLayout>

          <!-- TEMPLATE: FARM JOB (placeholder) -->
          <BoxLayout flowDirection="vertical" id="sectionFarmJob">
            <Text text="Farm Job" profile="CC_ContractInputLabel"/>
            <MultiTextOption id="farmJobSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onFarmJobChange">
              <Text profile="fs25_multiTextOptionText" name="text" />
            </MultiTextOption>
          </BoxLayout>

          <!-- TEMPLATE: CUSTOM -->
          <BoxLayout flowDirection="vertical" id="sectionCustom">
            <Text text="Title" profile="CC_ContractInputLabel" />
            <TextInput profile="CC_Input" id="titleInput" enterWhenClickOutside="false">
              <ThreePartBitmap profile="fs25_textInputBg" />
            </TextInput>
          </BoxLayout>
        </GuiElement>

      </BoxLayout>
    </GuiElement>

    <BoxLayout profile="fs25_dialogButtonBox">
      <Button profile="buttonBack" text="$l10n_cc_dialog_create_btn_cancel" onClick="onCancel" />
      <Button profile="buttonOK" text="$l10n_cc_dialog_create_btn_create" onClick="onConfirm" />
    </BoxLayout>
  </GuiElement>

  <GUIProfiles>
    <Profile name="ingameMenuTSStockCheckList" extends="emptyPanel" with="anchorStretchingYLeft pivotTopLeft">
    </Profile>
    <Profile name="ingameMenuTSStockCheckListItem" extends="baseReference" with="anchorTopStretchingX alternating">
      <height value="32px"/>
      <imageColor value="$preset_fs25_colorGrey" />
      <imageSelectedColor value="$preset_fs25_colorMainHighlight" />
      <alternateBackgroundColor value="$preset_fs25_colorGreyDark_50" />
    </Profile>

    <Profile name="ingameMenuTSStockCheckRowCellLeftBright" extends="baseReference" with="anchorStretchingYLeft">
      <size value="155px 32px" />
      <textBold value="true" />
      <textSize value="15px" />
      <textAlignment value="left" />
      <textColor value="$preset_fs25_colorMainLight" />
      <textSelectedColor value="$preset_fs25_colorMainDark" />
      <textDisabledColor value="$preset_colorDisabled" />
    </Profile>
    <Profile name="ingameMenuTSStockCheckRowCellRight" extends="ingameMenuTSStockCheckRowCellLeft">
      <textAlignment value="right" />
    </Profile>
  </GUIProfiles>
</GUI>
