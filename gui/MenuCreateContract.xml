<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="menuCreateContract" onOpen="onOpen" onClose="onClose" onCreate="onCreate">
  <GuiElement profile="newLayer" />
  <Bitmap profile="dialogFullscreenBg" id="dialogBg" />
  <GuiElement profile="dialogBg" id="dialogElement" size="900px 800px">
    <ThreePartBitmap profile="fs25_dialogBgMiddle" />
    <ThreePartBitmap profile="fs25_dialogBgTop" />
    <ThreePartBitmap profile="fs25_dialogBgBottom" />

    <GuiElement profile="fs25_dialogContentContainer">
      <Text profile="dialogTitle" text="Create Contract" position="0px -30px"/>

      <BoxLayout flowDirection="vertical" position="15px -100px">
        <BoxLayout flowDirection="vertical" size="435px 400px" elementSpacing="5px" extends="emptyPanel" with="anchorTopLeft">

          <!-- Field -->
          <Text text="Field ID" profile="customContractsLabelText"/>
          <MultiTextOption id="fieldSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onFieldSelectChange">
            <Text profile="fs25_multiTextOptionText" name="text" />
          </MultiTextOption>

          <!-- Work type -->
          <Text text="Work Type" profile="customContractsLabelText" />
          <MultiTextOption id="workTypeSelector" profile="fs25_multiTextOption" size="100% 44px" onClick="onGroupSelectChange">
            <Text profile="fs25_multiTextOptionText" name="text" />
          </MultiTextOption>

          <!-- Reward -->
          <Text text="Reward (â‚¬)" profile="customContractsLabelText"/>
          <TextInput profile="CC_dialogInput" id="rewardInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
            <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
          </TextInput>

          <!-- Description -->
          <Text text="Description (optional)" profile="customContractsLabelText" />
          <TextInput profile="CC_dialogInputTextArea" id="descriptionInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
            <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
          </TextInput>

        </BoxLayout>
      </BoxLayout>
    </GuiElement>

    <BoxLayout profile="fs25_dialogButtonBox">
      <Button profile="buttonBack" text="Cancel" onClick="onCancel" />
      <Button profile="buttonOK" text="Create" onClick="onConfirm" />
    </BoxLayout>
  </GuiElement>

  <GUIProfiles>
    <Profile name="CC_dialogInput" extends="fs25_textInput">
      <size value="100% 44px"/>
      <maxCharacters value="9"/>
    </Profile>
    <Profile name="CC_dialogInputTextArea" extends="CC_dialogInput">
      <size value="100% 44px"/>
      <maxCharacters value="200"/>
      <textAlignment value="left"/>
    </Profile>
  </GUIProfiles>
</GUI>
