<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="menuCreateContract" onOpen="onOpen" onClose="onClose" onCreate="onCreate">
  <GuiElement profile="newLayer" />
  <Bitmap profile="dialogFullscreenBg" id="dialogBg" />
  <GuiElement profile="dialogBg" id="dialogElement" size="900px 800px">
    <ThreePartBitmap profile="fs25_dialogBgMiddle" />
    <ThreePartBitmap profile="fs25_dialogBgTop" />
    <ThreePartBitmap profile="fs25_dialogBgBottom" />

    <GuiElement profile="fs25_dialogContentContainer">
      <Text profile="dialogTitle" text="Create Contract" position="0px -30px"/>

      <BoxLayout flowDirection="vertical" position="15px -100px" spacing="80px">
        <BoxLayout flowDirection="vertical" size="435px 300px" extends="emptyPanel" with="anchorTopLeft">

          <!-- Field -->
          <Text text="Field ID" profile="customContractsLabelText" />
          <MultiTextOption id="fieldSelector" profile="fs25_multiTextOption" size="100% 50px" onClick="onFieldSelectChange">
            <Text profile="fs25_multiTextOptionText" name="text" />
          </MultiTextOption>

          <!-- Work type -->
          <Text text="Work Type" profile="customContractsLabelText" />
          <MultiTextOption id="workTypeSelector" profile="fs25_multiTextOption" size="100% 50px" onClick="onGroupSelectChange">
            <Text profile="fs25_multiTextOptionText" name="text" />
          </MultiTextOption>

          <!-- Reward -->
          <Text text="Reward (â‚¬)" profile="customContractsLabelText" />
          <TextInput profile="CC_dialigInput" id="rewardInput" onEnterPressed="onEnterPressed" onTextChanged="onTextChanged" enterWhenClickOutside="false">
            <ThreePartBitmap profile="fs25_textInputBg" absoluteSizeOffset="0px 0px"/>
          </TextInput>

        </BoxLayout>
        <ThreePartBitmap profile="fs25_lineSeparatorTop" position="0px -57px"/>
        <BoxLayout flowDirection="horizontal" size="100% 250px" extends="emptyPanel" with="anchorTopLeft">
          <Text text="Field information" profile="customContractsLabelText" />
          <Bitmap profile="CC_IconInfo" name="itemIcon" visible="true" />
          <Text text="Field 2" profile="CC_FieldValue" />
          <Bitmap profile="CC_IconInfo" name="itemIcon" visible="true" />
          <Text text="2 ha" profile="CC_FieldValue" />
        </BoxLayout>
      </BoxLayout>

    </GuiElement>

    <BoxLayout profile="fs25_dialogButtonBox">
      <Button profile="buttonBack" text="Cancel" onClick="onCancel" />
      <Button profile="buttonOK" text="Create" onClick="onConfirm" />
    </BoxLayout>
  </GuiElement>

  <GUIProfiles>
    <Profile name="CC_dialigInput" extends="fs25_textInput">
      <size value="340px 31px"/>
      <maxCharacters value="9"/>
    </Profile>
  </GUIProfiles>
</GUI>
